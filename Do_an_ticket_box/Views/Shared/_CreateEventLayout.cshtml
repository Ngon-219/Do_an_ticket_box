                </div>
            </div>
            <div class="col py-3">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Validator.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<script>
    window.addEventListener('resize', function () {
        var myDiv = document.getElementById('desktop');

        if (window.innerWidth < 1024) {
            myDiv.style.display = 'none';
            document.getElementById('mobile').classList.remove('d-none');
            document.getElementById('header').classList.remove('justify-content-center');
            document.getElementById('header').classList.remove('d-flex');
        }
    });
    window.dispatchEvent(new Event('resize'));
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</html>
