<style>
    .segment-control {
        width: 100%;
        box-sizing: border-box;
        color: rgba(0, 0, 0, 0.65);
        font-size: 14px;
        line-height: 1.57;
        list-style: none;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
        display: inline-block;
        background: #f5f5f5;
        border-radius: 6px;
        transition: all 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
        flex: auto;
    }
    .ant-segmented-group{
        display:flex;
    }
    .ant-segmented-item {
        text-align: center;
        cursor: pointer;
        transition: color 0.2s cubic-bezier(0.645, 0.045, 0.355, 1);
        flex: 1;
    }

    .search-bar {
        display: flex;
        align-items: center;
    }

    .search-input {
        width: 100%;
        height: 40px;
        border-radius: 6px 0 0 6px;
        border: 1px solid rgba(0, 0, 0, 0.15);
        padding: 7px 11px;
        font-size: 16px;
    }
    .search-button {
        width: 40px;
        height: 40px;
        border-radius: 0 6px 6px 0;
        border: 1px solid rgba(0, 0, 0, 0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
    }
    
    .ant-row {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        padding: 24px 60px;
    }

    .ant-col-4 {
        flex: 0 0 40%; /* 40% width */
        padding-left: 15px;
        padding-right:15px;
    }

    .ant-col-6 {
        flex: 0 0 60%; /* 60% width */
        padding-left: 15px;
        padding-right: 15px;
    }
    

    .ant-segmented-item-label {
        padding: 8px 16px;
        font-size: 16px;
        min-width: 60px;
    }

    .ant-segmented-item-input {
        position: absolute;
        inset-block-start: 0;
        inset-inline-start: 0;
        width: 0;
        height: 0;
        opacity: 0;
        pointer-events: none;
    }

    .ant-segmented-item:hover{
        border-radius: 6px;
        color: rgba(0, 0, 0, 0.88);
        background-color: #e6e6e6;
    }

    .ant-segmented-item-active{
        color: #fff;
        background-color: #2dc275;
    }

    .container {
        width: 80%;
        margin: auto;
    }

    .event-card {
        display: flex;
        align-items: flex-start;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 20px;
        background-color: #fff;
    }

    .event-image {
        width: 150px;
        height: 150px;
        border-radius: 8px;
        object-fit: cover;
        margin-right: 20px;
    }

    .event-details {
        flex: 1;
    }

    .event-title {
        font-size: 1.5em;
        margin: 0 0 10px;
    }

    .event-date-time, .event-location, .event-status, .event-description, .event-category, .event-tickets {
        margin: 5px 0;
    }

    .event-actions {
        margin-top: 10px;
    }

    .btn {
        text-decoration: none;
        padding: 8px 12px;
        border-radius: 4px;
        color: #fff;
        margin-right: 10px;
    }

    .btn-edit {
        background-color: #4CAF50;
    }

    .btn-delete {
        background-color: #f44336;
    }

    .btn-view {
        background-color: #008CBA;
    }

</style>

