
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container containerMyTicket">
    <div class="grid wide">
        <div class="row d-none d-md-flex headerTicketPage">
            <div class="col-12">
                <a href="/" target="" class="headerText headerLink">Trang chủ</a>
                <i class="fa-solid fa-angle-right" class="headerIcon"></i>
                <span class="headerText">Vé đã mua</span>
            </div>
        </div>
        <div class="row appContent">
            <div class="col-2 d-none d-md-block">
                <nav class="navTicketPage">
                    <div class="navTicketPage__AccountInfor">
                        <img src="" alt="" class="AccountImgMyTicket">
                        <div class="AccountInfor">
                            <span class="AccountInfor__Text">Tài khoản của</span>
                            <span class="AccountInfor__Name">Nguyễn Văn A @* Model.Name *@</span>
                        </div>
                    </div>
                    <ul class="NavigationList">
                        <li class="NavigationItem">
                            <a href="" class="NavigationLink">
                                <i class="fa-regular fa-user NavigationIcon"></i>
                                <span title="" class="NavigationText">Thông tin tài khoản</span>
                            </a>
                        </li>
                        <li class="NavigationItem">
                            <a href="" class="NavigationLink">
                                <i class="fa-solid fa-ticket NavigationIcon"></i>
                                <span class="NavigationText">Vé đã mua</span>
                            </a>
                        </li>
                        <li class="NavigationItem">
                            <a href="" class="NavigationLink">
                                <i class="fa-regular fa-calendar-days NavigationIcon"></i>
                                <span class="NavigationText">Sự kiện của tôi</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-12 col-md-10">
                <div class="ticketPageContainer">
                    <div class="headerContainer">Vé đã mua</div>
                    <div class="divider"></div>
                    <div class="Wrapper">
                        <div class="TabList">
                            <div class="TabItem">
                                <a title="Tất cả" class="TabItemLink TabItemActive" onclick="activeTab(this)">Tất cả</a>
                            </div>
                            <div class="TabItem">
                                <a title="Thành công" class="TabItemLink" onclick="activeTab(this)">Thành công</a>
                            </div>
                            <div class="TabItem">
                                <a title="Đang xử lý" class="TabItemLink" onclick="activeTab(this)">Đang xử lý</a>
                            </div>
                            <div class="TabItem">
                                <a title="Đã hủy" class="TabItemLink" onclick="activeTab(this)">Đã hủy</a>
                            </div>
                        </div>
                       <div class="EventList" style="display: flex; position: relative;">
                                <a href="#" class="EventItem active" onclick="activeUnderline(this); return false;" style="position: relative; padding-bottom: 5px; margin-right: 15px;">
                                    Sắp diễn ra
                                </a>
                                <a href="#" class="EventItem" onclick="activeUnderline(this); return false;" style="position: relative; padding-bottom: 5px;">
                                    Đã kết thúc
                                </a>
                        </div>
                    </div>
                    @if (true)
                    {
                        <div class="TicketList">
                            <div class="TicketItem">
                                <div class="TicketDate">
                                    <span class="TicketDay">26</span>
                                    <span class="TicketMonthYear">
                                        Tháng <br>10<br>2024
                                    </span>
                                </div>
                                <div class="TicketContent">
                                    <h3 class="TicketEventTitle">[Hà Nội] Vũ. - "Bảo Tàng của Nuối Tiếc" Live Concert 2024</h3>
                                    <div class="TicketStatus">
                                        <span class="StatusLabel success">Thành công</span>
                                        <span class="StatusLabel digital-ticket">Vé điện tử</span>
                                    </div>
                                    <div class="TicketDetails">
                                        <p class="TicketOrderCode">Order code: 753090200</p>
                                        <p class="TicketTime">20:00 - 22:00, 26 tháng 10, 2024</p>
                                        <p class="TicketLocation">
                                            Công viên Yên Sở (sự kiện ngoài trời)<br>
                                            QL1A Công viên, Phường Yên Sở, Quận Hoàng Mai, Thành Phố Hà Nội
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="padding-bottom: 100px;"></div>

