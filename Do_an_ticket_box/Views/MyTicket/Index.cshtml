<style> 

    .grid {
        width: 100%;
        display: block;
        padding: 0;
    }

    .grid.wide {
        max-width: 1200px;
        margin: 0 auto;
     }

    html {
        line-height: 16px;
        font-family: 'Roboto', sans-serif;
        box-sizing: border-box;
    }


    body {
        margin: 0;
    }

    .containerMyTicket {
        max-width: 100%;
        padding: 32px 0;
        background-color: #27272a;
    }

    .headerTicketPage {
        padding: 0 0 32px 0;
        color: #fff;
        font-size: 12px;
        font-weight: bold;
    }

    .headerLink {
        color: #ddd;
        text-decoration: none;
    }

    .headerIcon {
        color: #eee;
    }

    .navTicketPage__AccountInfor {
        display: flex;
        color: #fff;
    }

    .AccountImgMyTicket {
        border-radius: 50%;
        width: 34px;
        height: 34px;
        object-fit: cover;
    }

    .AccountInfor {
        font-size: 12px;
    }

    .navTicketPage__AccountInfor {
        display: flex;
        flex-direction: row;
        gap: 18px;
        -webkit-box-align: center;
        align-items: center;
        -webkit-box-pack: center;
        justify-content: center;
    }

    .AccountInfor__Text {
        display: inline-block;
        font-weight: 400;
        line-height: 21px;
        width: 150px;
    }

    .AccountInfor__Name {
        display: inline-block;
        font-size: 16px;
        font-weight: 400;
        line-height: 21px;
        width: 150px;
    }

    .NavigationList {
        padding: 0;
        list-style-type: none;
        margin: 16px 0;
    }

    .NavigationLink {
        text-decoration: none;
    }

    .NavigationItem {
        padding: 4px 8px;
    }

    .NavigationIcon {
        margin-right: 8px;
        font-size: 12px;
        color: #fff !important;
    }

    .NavigationText {
        font-size: 12px;
        color: #fff !important;
    }

    .ticketPageContainer {
    }

    .headerContainer {
        text-align: left; /* Căn trái cho tiêu đề */
        font-size: 24px; /* Kích thước chữ */
        font-weight: bold; /* Đậm chữ */
        line-height: 24px; /* Chiều cao dòng */
        padding-bottom: 10px; /* Khoảng cách dưới tiêu đề */
        background: transparent; /* Nền trong suốt */
        color: rgb(255, 255, 255); /* Màu chữ trắng */
    }

    .divider {
        width: 100%; /* Chiều rộng đầy đủ */
        height: 1px; /* Chiều cao đường kẻ */
        background-color: rgb(56, 56, 61); /* Màu đường kẻ */
    }

    .Wrapper {
        padding: 15px; /* Khoảng cách bên trong Wrapper, có thể điều chỉnh */
    }

    /* TabList */
    .TabList {
        display: flex; /* Sử dụng flexbox cho danh sách tab */
        justify-content: space-between; /* Phân bổ không gian đều giữa các phần tử */
        align-items: center; /* Căn giữa theo chiều dọc */
        list-style: none; /* Xóa dấu đầu dòng */
        overflow: auto hidden; /* Xử lý tràn */
        white-space: nowrap; /* Không cho xuống dòng */
    }

    .TabItem {
        background-color: #5d6169; /* Màu nền cho tab */
        border-radius: 30px; /* Bo tròn các góc */
        flex: 0 0 auto; /* Không cho tab co giãn */

        margin: 0 2px 0;
        width: 210px;
        height: 29px;
    }

    a.TabItemLink {
        color: #2a2d34 !important; /* Màu chữ cho liên kết */
        width: 100%; /* Chiều rộng đầy đủ */
        height: 100%; /* Chiều cao đầy đủ */
        border-radius: 30px; /* Bo tròn góc */
        display: flex; /* Sử dụng flexbox để căn giữa nội dung */
        justify-content: center; /* Căn giữa theo chiều ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
        font-weight: bold; /* Đậm chữ */
        font-size: 14px; /* Kích thước chữ */
        line-height: 21px; /* Chiều cao dòng */
        text-decoration: none; /* Xóa gạch chân */
        cursor: pointer; /* Con trỏ chuột khi hover */
        transition: background-color 0.3s; /* Hiệu ứng chuyển màu nền khi hover */
    }

    .TabItemActive {
        background-color: rgb(45, 194, 117); /* Màu nền cho tab đang hoạt động */
    }

    .EventList {
        display: flex; /* Sử dụng flexbox cho danh sách sự kiện */
        justify-content: center; /* Căn giữa */
        margin: 16px 0 0; /* Khoảng cách trên */
    }

    .EventItem {
        display: block; /* Hiển thị dạng khối */
        position: relative; /* Để sử dụng cho pseudo-element */
        color: #fff; /* Màu chữ cho sự kiện */
        font-size: 16px; /* Kích thước chữ */
        transition: color 0.3s; /* Hiệu ứng chuyển màu chữ khi hover */
        margin: 16px 8px 16px;
        text-decoration: none;
        font-weight: normal;
    }

        .EventItem.active {
            font-weight: bold;
        }

            .EventItem.active::after {
            content: ""; /* Tạo pseudo-element */
            width: 25px; /* Chiều rộng của đường kẻ */
                height: 2px;
                background-color: rgb(45, 194, 117); /* Màu sắc đường kẻ */
                position: absolute;
                bottom: -5px; /* Khoảng cách bên dưới */
                left: 50%; /* Canh giữa */
                transform: translateX(-50%); /* Điều chỉnh vị trí về giữa */
        }

        /* Thêm hiệu ứng hover cho EventItem */
        .EventItem:hover {
            font-weight: bold;
            color: rgb(45, 194, 117); /* Chuyển màu chữ khi hover */
        }

    .TicketEmpty__Container {
        display: block;
        height: auto;
        margin-top: 80px;
        text-align: center;
    }

    .TicketEmpty__Img {
        border-radius: 50%;
        width: 260px;
        height: 260px;
        object-fit: cover;
    }

    .TicketEmpty__Text {
        font-size: 16px;
        line-height: 24px;
        text-align: center;
        margin-top: 16px;
        color: rgb(175, 184, 201);
    }

    .TicketEmpty__Footer {
        padding: 80px 0 0;
        display: flex;
        justify-content: center;
    }

    .TicketEmpty__Link {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        text-decoration: none;
        color: #fff;
        font-size: 14px;
        font-weight: bold;
        width: 150px;
        height: 40px;
        background-color: rgb(45, 194, 117);
        margin-top: 80px;
        border-radius: 4px;
    }

    .TicketList {
        margin-top: 20px;
    }

    .TicketItem {
        display: flex;
        background-color: #333;
        color: white;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .TicketDate {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #444;
        padding: 10px;
        border-radius: 8px;
        width: 80px;
        margin-right: 15px;
        text-align: center;
    }

    .TicketDay {
        font-size: 24px;
        font-weight: bold;
    }

    .TicketMonthYear {
        font-size: 14px;
    }

    .TicketEventTitle {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        color: #fff;
