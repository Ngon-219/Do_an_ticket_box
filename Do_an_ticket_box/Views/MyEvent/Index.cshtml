@{
}

<div class="text-center text-white" style="margin: 2vw;">
    <h1 class="text-white">Danh sách những sự kiện của bạn</h1>

    <table style="border: 1px solid white; border-collapse: collapse; width: 100%;">
        <thead>
            <tr>
                <th style="border: 1px solid white; padding: 8px;">Tên sự kiện</th>
                <th style="border: 1px solid white; padding: 8px;">Ngày diễn ra</th>
                <th style="border: 1px solid white; padding: 8px;">Địa điểm</th>
                <th style="border: 1px solid white; padding: 8px;">Ngày tạo</th>
                <th style="border: 1px solid white; padding: 8px;">Trạng thái</th>
                <th style="border: 1px solid white; padding: 8px;">Chi tiết</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="border: 1px solid white; padding: 8px;">@item.Event_Name</td>
                    <td style="border: 1px solid white; padding: 8px;">@item.Event_date</td>
                    <td style="border: 1px solid white; padding: 8px;">@item.location</td>
                    <td style="border: 1px solid white; padding: 8px;">@item.created_at_time</td>
                    <td style="border: 1px solid white; padding: 8px;">
                        @if (item.Event_date_end < DateTime.Now)
                        {
                            @:Finish
                        }
                        else
                        {
                            @item.status
                        }
                    </td>

                    <td style="border: 1px solid white; padding: 8px;">
                        <a href="@Url.Action("Details", "MyEvent", new {id = item.Event_ID})">Detail</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


